@model UserLeaveTypeEditDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-header">
    <h1>
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Çalışan İzin Tipi Güncelleme
        </small>
    </h1>
</div>
<div class="">
    <div class="col-xs-12">
        <form class="form-horizontal" role="form" asp-controller="UserLeaveTypes" asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> izin Tipi :</label>

                <div class="col-sm-9">
                    <input type="text" asp-for="Name" id="form-field-1" placeholder="izin Tipi" class="col-xs-10 col-sm-5" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Default Gün Sayısı :</label>

                <div class="col-sm-9">
                    <input type="number" asp-for="DefaultDays" id="form-field-1" placeholder="Default Gün " class="col-xs-10 col-sm-5" />
                </div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Kaydet
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <a asp-action="Index" class="btn">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Listeye Dön
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>