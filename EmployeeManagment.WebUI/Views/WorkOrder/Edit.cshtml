@model WorkOrderEditDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Çalışan İş Emri Güncelleme
        </small>
    </h1>
</div>

<div class="">
    <div class="col-xs-12">
        <form class="form-horizontal" role="form" asp-controller="WorkOrder" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="CreatedUserId" />
            <input type="hidden" asp-for="ImageUrl" />

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> İş Emri Numarası :</label>

                <div class="col-sm-9">
                    <input type="text" asp-for="WorkOrderNumber" id="form-field-1" placeholder="İş Emri Numarası" class="col-xs-10 col-sm-5" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Puan :</label>

                <div class="col-sm-9">
                    <input type="number" asp-for="Point" id="form-field-1" placeholder="Puan" class="col-xs-10 col-sm-5" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> İş Emri Açıklaması :</label>

                <div class="col-sm-9">
                    <textarea asp-for="Description" id="form-field-1" placeholder="İş Emri Açıklaması" class="col-xs-10 col-sm-5"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Kullanıcı :</label>

                <div class="col-sm-9">
                    <select asp-items="(List<SelectListItem>)ViewBag.Users" asp-for="AssignUserId" id="form-field-1" placeholder="Kullanıcı" class="col-xs-10 col-sm-5">
                        <option></option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> İş Emri Durumu :</label>

                <div class="col-sm-9">
                    <select asp-for="WorkOrderStatus" id="form-field-1" placeholder="İş Emri Durumu" class="col-xs-10 col-sm-5">
                        <option value="1">İş Emri Oluşturuldu</option>
                        <option value="2">Atandı</option>
                        <option value="3">Üstlendi</option>
                        <option value="4">Kapatıldı</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3">
                    Resim : 
                </div>
                <div class="col-sm-9">
                    @if (Model.ImageUrl != null)
                    {
                        <img class="img-rounded" height="80" width="60" src="~/images/@Model.ImageUrl" alt="-" />
                    }
                </div>
           
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Resim : </label>
                <div class="col-sm-9">
                    <input type="file" name="file" id="form-field-1" placeholder="Resim Seçiniz..." class="col-xs-10 col-sm-5 custom-file-input" />
                </div>
            </div>

            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Kaydet
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <a asp-action="Index" class="btn">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Listeye Dön
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>